# ===========================================
# Laravel 求职招聘网站环境配置示例
# ===========================================

# 应用基础配置
APP_NAME="MyJob Portal"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# 数据库配置
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=myjob_portal
DB_USERNAME=root
DB_PASSWORD=

# 网站基本信息配置
SITE_NAME="MyJob Portal"
SITE_DESCRIPTION="专业的求职招聘平台"
SITE_KEYWORDS="求职,招聘,工作,职位,人才"
SITE_URL=http://localhost:8000
SITE_LOGO=/assets/images/logo.svg
SITE_FAVICON=/assets/images/favicon.ico

# 联系信息配置
CONTACT_EMAIL=contact@myjobportal.com
CONTACT_PHONE=+86 400-123-4567
CONTACT_ADDRESS="北京市朝阳区某某街道123号"
BUSINESS_HOURS="周一至周五 9:00-18:00"

# 社交媒体配置
SOCIAL_WEIBO=https://weibo.com/myjobportal
SOCIAL_WECHAT=
SOCIAL_LINKEDIN=https://linkedin.com/company/myjobportal
SOCIAL_GITHUB=https://github.com/myjobportal

# SEO 配置
SEO_DEFAULT_TITLE="MyJob Portal - 专业的求职招聘平台"
SEO_DEFAULT_DESCRIPTION="MyJob Portal 是一个专业的求职招聘平台，为企业提供优质的人才招聘服务，为求职者提供丰富的职位机会。"
SEO_DEFAULT_KEYWORDS="求职,招聘,工作,职位,人才,就业"
SEO_OG_IMAGE=/assets/images/og-image.jpg
SEO_TWITTER_SITE=@myjobportal

# 业务配置
JOB_ITEMS_PER_PAGE=15
JOB_MAX_SALARY=100000
JOB_MIN_SALARY=3000

# 文件上传配置
UPLOAD_MAX_FILE_SIZE=2048

# 缓存配置
CACHE_JOB_LIST_TTL=300
CACHE_JOB_DETAIL_TTL=600
CACHE_COMPANY_LIST_TTL=300

# API 配置
API_BASE_URL=/******MyJob API******/
API_KEY=your-secret-api-key-here
API_CACHE_TTL=86400
API_TIMEOUT=30
API_RETRY_TIMES=3
API_RETRY_DELAY=100

# 邮件配置
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@myjobportal.com"
MAIL_FROM_NAME="MyJob Portal"
ADMIN_EMAIL=admin@myjobportal.com
NOTIFICATION_EMAIL=notifications@myjobportal.com

# 会话配置
SESSION_DRIVER=file
SESSION_LIFETIME=120

# 缓存配置
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# Redis 配置（可选）
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# 日志配置
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# 其他服务配置
BROADCAST_DRIVER=log
FILESYSTEM_DISK=local

# 安全配置
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1

# 站点配置
SITE_CONFIG_FILE=config/sites.json
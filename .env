# Application Basic Configuration
APP_NAME="Job Chain"
APP_ENV=local
APP_KEY=base64:1+ReiXQBpPHBK2IrDVY77rAG3zNon0sdbZdYTIrnb9o=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=myjob_portal
DB_USERNAME=root
DB_PASSWORD=

# Website Basic Information Configuration
SITE_NAME="Job Chain"
SITE_DESCRIPTION="Professional job recruitment platform"
SITE_KEYWORDS="Job search, Recruitment, Work, Position, Talent"
SITE_URL=http://localhost:8000
SITE_LOGO=/assets/images/micro-logo.png
SITE_FAVICON=/assets/images/favicon.ico

# Contact Information Configuration
CONTACT_EMAIL=contact@myjobportal.com
CONTACT_PHONE="+86 400-123-4567"
CONTACT_ADDRESS="123 Some Street, Chaoyang District, Beijing"
BUSINESS_HOURS="Monday to Friday 9:00-18:00"

# Social Media Configuration
SOCIAL_WEIBO=https://weibo.com/myjobportal
SOCIAL_WECHAT=
SOCIAL_LINKEDIN=https://linkedin.com/company/myjobportal
SOCIAL_GITHUB=https://github.com/myjobportal

# SEO Configuration
SEO_DEFAULT_TITLE="Job Chain - Professional Job Recruitment Platform"
SEO_DEFAULT_DESCRIPTION="Job Chain is a professional job recruitment platform, providing enterprises with high-quality talent recruitment services and offering job seekers abundant career opportunities."
SEO_DEFAULT_KEYWORDS="Job search, Recruitment, Work, Position, Talent, Employment"
SEO_OG_IMAGE=/assets/images/og-image.jpg
SEO_TWITTER_SITE=@myjobportal

# Business Configuration
JOB_ITEMS_PER_PAGE=15
JOB_MAX_SALARY=100000
JOB_MIN_SALARY=3000

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=2048

# Cache Configuration
CACHE_JOB_LIST_TTL=300
CACHE_JOB_DETAIL_TTL=600
CACHE_COMPANY_LIST_TTL=300

# API Configuration
API_BASE_URL=/******MyJob API******/
API_KEY=your-secret-api-key-here
API_CACHE_TTL=86400
API_TIMEOUT=30
API_RETRY_TIMES=3
API_RETRY_DELAY=100

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@myjobportal.com"
MAIL_FROM_NAME="Job Chain"
ADMIN_EMAIL=admin@myjobportal.com
NOTIFICATION_EMAIL=notifications@myjobportal.com

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Cache Configuration
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# Redis Configuration (Optional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=emergency

# Other Service Configuration
BROADCAST_DRIVER=log
FILESYSTEM_DISK=local

# Security Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1

# Site Configuration
SITE_CONFIG_FILE=config/sites.json